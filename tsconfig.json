{
    "compilerOptions": {
        "target": "es2022",
        "strict": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "outDir": "build/",
        "noEmitOnError": true,
        // "noUnusedLocals": false,
        // "noUnusedParameters": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
